{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
, "../towns_ww/run-chat.js", "../towns_ww/run-discussion.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 